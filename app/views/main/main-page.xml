<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <TabView>
    <TabView.items>
      <TabViewItem iconSource="~/img/transmission.png">
        <TabViewItem.view>
          <StackLayout class="tab-content">
           <DockLayout class="switch-stack" orientation="horizontal">
              <Label id="gpsSwitchlabel" dock="left" text="Send data:" />
              <Switch checked="false" dock="right" propertyChange="gpsTap"/>
           </DockLayout>
           <Label id="gpsLabelStatus" text="" textWrap="true" />
           <Label id="gpsLabelLatitude" text="" textWrap="true" />
           <Label id="gpsLabelLongitude" text="" textWrap="true" />
           <Label id="gpsLabelSpeed" text="" textWrap="true" />
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
    <TabViewItem iconSource="~/img/bt-disconnected.png">
      <TabViewItem.view>
        <StackLayout class="tab-content">
          <Button cssClass="ButtonParameter" text="Bluetooth Scan!" tap="bluetoothScanAction" />
          <Label text="Scanned devices :" textWrap="true" />
           <ListView items="{{ items }}" itemTap="bluetoothOnTap" id="deviceList">
            <ListView.itemTemplate>
              <StackLayout col="2" orientation="horizontal">
                <Label text="{{ title }}"/>
                <Label text=" || "/>
                <Label text="{{ address }}" />
              </StackLayout>
            </ListView.itemTemplate>
          </ListView>
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
    <TabViewItem iconSource="~/img/map.png">
      <TabViewItem.view>
        <StackLayout class="tab-content">
          <WebView src="http://openlayers.org/en/v3.2.1/examples/simple.html" />
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
  </TabView.items>
</TabView>
</Page>