<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <TabView>
    <TabView.items>
      <TabViewItem title="Hardware">
        <TabViewItem.view>
          <StackLayout class="tab-content">
           <Button cssClass="ButtonParameter" text="GPS On" tap="gpsAction" />
           <Button cssClass="ButtonParameter" text="GPS Off" tap="stopGpsAction" />
           <Button cssClass="ButtonParameter" text="Bluetooth Scan!" tap="bluetoothScanAction" />
           <Button cssClass="ButtonParameter" text="Get sensors" tap="" />
           <Button cssClass="ButtonParameter" text="Send data to main" tap="sendDataAction(1,1,1,1,1,1)" />
           <Button cssClass="ButtonParameter" text="Pull data from main" tap="pullDataAction" />
           <Label id="gpsLabelStatus" text="" textWrap="true" />
           <Label id="gpsLabelLatitude" text="" textWrap="true" />
           <Label id="gpsLabelLongitude" text="" textWrap="true" />
           <Label id="gpsLabelSpeed" text="" textWrap="true" />
           <Label text="Scanned devices :" textWrap="true" />
           <ListView items="{{ items }}" itemTap="bluetoothOnTap" id="deviceList">
            <ListView.itemTemplate>
              <StackLayout col="2" orientation="horizontal">
                <Label text="{{ title }}"/>
                <Label text=" || "/>
                <Label text="{{ address }}" />
              </StackLayout>
            </ListView.itemTemplate>
          </ListView>
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
    <TabViewItem title="Map">
      <TabViewItem.view>
        <StackLayout class="tab-content">
          <WebView src="http://openlayers.org/en/v3.2.1/examples/simple.html" />
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
  </TabView.items>
</TabView>
</Page>