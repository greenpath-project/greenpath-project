<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <TabView>
    <TabView.items>
      <TabViewItem iconSource="~/img/transmission.png">
        <TabViewItem.view>
          <StackLayout class="tab-content">
           <DockLayout class="switch-stack" orientation="horizontal">
              <Label id="gpsSwitchlabel" dock="left" text="Send data:" />
              <Switch checked="false" dock="right" propertyChange="gpsTap"/>
           </DockLayout>
           <Label id="gpsLabelStatus" text="" textWrap="true" />
           <Label id="gpsLabelLatitude" text="" textWrap="true" />
           <Label id="gpsLabelLongitude" text="" textWrap="true" />
           <Label id="gpsLabelSpeed" text="" textWrap="true" />
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
    <TabViewItem iconSource="~/img/bt-disconnected.png">
      <TabViewItem.view>
        <DockLayout class="tab-content">
          <Button dock="bottom" text="bottom" horizontalAlignement="bottom" cssClass="BluetoothButton" text="Start Bluetooth Scan" tap="bluetoothScanAction" />
          <Label cssClass="lbl" dock="top" text="top" text="Scanned devices :" textWrap="true" />
           <ListView dock="top" text="top" items="{{ items }}" itemTap="bluetoothOnTap" id="deviceList">
            <ListView.itemTemplate>
              <StackLayout orientation="horizontal">
                <Label cssClass="list_left" text="Name : "/>
                <Label cssClass="list" text="{{ title }}"/>
                <Label cssClass="list_left" text="Address : "/>
                <Label cssClass="list" text="{{ address }}" />
              </StackLayout>
            </ListView.itemTemplate>
          </ListView>
        </DockLayout>
      </TabViewItem.view>
    </TabViewItem>
    <TabViewItem iconSource="~/img/map.png">
      <TabViewItem.view>
        <StackLayout class="tab-content">
          <WebView src="http://greenpath.jumpt.fr/#/map/true" />
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
  </TabView.items>
</TabView>
</Page>